@model List<GaraWeb.Models.LienHe>
@{
    ViewData["Title"] = "Lịch sử liên hệ";
}

<div class="container" style="margin-top: 100px; margin-bottom: 50px; padding-bottom: 100px;">
    <div class="row">
        <div class="col-md-3">
            <div class="card">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <div class="rounded-circle bg-primary text-white d-inline-flex align-items-center justify-content-center" style="width: 80px; height: 80px; font-size: 32px;">
                            @User.Identity?.Name?.Substring(0, 1).ToUpper()
                        </div>
                    </div>
                    <h5 class="card-title">@User.Identity?.Name</h5>
                    <p class="text-muted">Khách hàng</p>
                </div>
                <div class="list-group list-group-flush">
                    <a asp-action="Profile" class="list-group-item list-group-item-action">
                        <i class="fas fa-user me-2"></i> Thông tin tài khoản
                    </a>
                    <a asp-action="MyRequests" class="list-group-item list-group-item-action">
                        <i class="fas fa-clipboard-list me-2"></i> Lịch sử yêu cầu dịch vụ
                    </a>
                    <a asp-action="MyContacts" class="list-group-item list-group-item-action active">
                        <i class="fas fa-envelope me-2"></i> Lịch sử liên hệ
                    </a>
                    <a asp-action="Logout" class="list-group-item list-group-item-action text-danger">
                        <i class="fas fa-sign-out-alt me-2"></i> Đăng xuất
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-9">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-envelope me-2"></i> Lịch sử liên hệ</h5>
                </div>
                <div class="card-body">
                    @if (Model != null && Model.Any())
                    {
                        <div class="list-group">
                            @foreach (var item in Model)
                            {
                                var statusClass = item.DaXuLy ? "success" : "warning";
                                var statusText = item.DaXuLy ? "Đã xử lý" : "Chưa xử lý";
                                <div class="list-group-item">
                                    <div class="d-flex w-100 justify-content-between">
                                        <h6 class="mb-1">
                                            <i class="fas fa-envelope-open-text me-2 text-primary"></i>
                                            @item.ChuDe
                                        </h6>
                                        <small class="text-muted">@item.NgayGui.ToString("dd/MM/yyyy HH:mm")</small>
                                    </div>
                                    <p class="mb-2">@item.NoiDung</p>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <small class="text-muted">
                                            <i class="fas fa-phone me-1"></i> @item.SoDienThoai
                                            <i class="fas fa-envelope ms-3 me-1"></i> @item.Email
                                        </small>
                                        <span class="badge bg-@statusClass">@statusText</span>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-envelope fa-4x text-muted mb-3"></i>
                            <p class="text-muted">Bạn chưa có liên hệ nào</p>
                            <a asp-controller="LienHe" asp-action="Index" class="btn btn-primary">
                                <i class="fas fa-paper-plane me-2"></i> Liên hệ ngay
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
