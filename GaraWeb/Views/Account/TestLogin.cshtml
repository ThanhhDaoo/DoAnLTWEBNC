@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Test Login</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>
    <div class="container mt-5">
        <h2>Test Login Debug</h2>
        
        <div class="card mt-4">
            <div class="card-body">
                <h5>Test Hash Password</h5>
                <form id="testForm">
                    <div class="mb-3">
                        <label>Password:</label>
                        <input type="text" id="password" class="form-control" value="123456" />
                    </div>
                    <button type="button" class="btn btn-primary" onclick="testHash()">Test Hash</button>
                </form>
                
                <div id="result" class="mt-3"></div>
            </div>
        </div>

        <div class="card mt-4">
            <div class="card-body">
                <h5>Test API Login</h5>
                <button type="button" class="btn btn-success" onclick="testApiLogin()">Test API với Thanhdao/123456</button>
                <div id="apiResult" class="mt-3"></div>
            </div>
        </div>

        <div class="card mt-4">
            <div class="card-body">
                <h5>Thông tin</h5>
                <ul>
                    <li>API URL: <code>https://localhost:7002/api/Auth/login</code></li>
                    <li>Username: <code>Thanhdao</code></li>
                    <li>Password: <code>123456</code></li>
                    <li>Expected Hash: <code>8d969eef6ecad3c29a3a629280e686cf0c3f5d5a86aff3ca12020c923adc6c92</code></li>
                </ul>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script>
        async function sha256(message) {
            const msgBuffer = new TextEncoder().encode(message);
            const hashBuffer = await crypto.subtle.digest('SHA-256', msgBuffer);
            const hashArray = Array.from(new Uint8Array(hashBuffer));
            const hashHex = hashArray.map(b => b.toString(16).padStart(2, '0')).join('');
            return hashHex;
        }

        async function testHash() {
            const password = document.getElementById('password').value;
            const hash = await sha256(password);
            
            const expected = '8d969eef6ecad3c29a3a629280e686cf0c3f5d5a86aff3ca12020c923adc6c92';
            const match = hash === expected;
            
            document.getElementById('result').innerHTML = `
                <div class="alert alert-info">
                    <strong>Password:</strong> ${password}<br>
                    <strong>Hash:</strong> <code>${hash}</code><br>
                    <strong>Expected:</strong> <code>${expected}</code><br>
                    <strong>Match:</strong> <span class="badge bg-${match ? 'success' : 'danger'}">${match ? 'YES' : 'NO'}</span>
                </div>
            `;
        }

        async function testApiLogin() {
            const password = '123456';
            const hash = await sha256(password);
            
            const payload = {
                username: 'Thanhdao',
                password: hash
            };

            document.getElementById('apiResult').innerHTML = '<div class="alert alert-info">Đang gọi API...</div>';

            try {
                const response = await fetch('https://localhost:7002/api/Auth/login', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(payload)
                });

                const data = await response.json();
                
                if (response.ok) {
                    document.getElementById('apiResult').innerHTML = `
                        <div class="alert alert-success">
                            <strong>Success!</strong><br>
                            <pre>${JSON.stringify(data, null, 2)}</pre>
                        </div>
                    `;
                } else {
                    document.getElementById('apiResult').innerHTML = `
                        <div class="alert alert-danger">
                            <strong>Error ${response.status}:</strong><br>
                            <pre>${JSON.stringify(data, null, 2)}</pre>
                        </div>
                    `;
                }
            } catch (error) {
                document.getElementById('apiResult').innerHTML = `
                    <div class="alert alert-danger">
                        <strong>Error:</strong> ${error.message}
                    </div>
                `;
            }
        }
    </script>
</body>
</html>
