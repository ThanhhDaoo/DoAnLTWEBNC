@{
    ViewData["Title"] = "Đăng nhập";
}

<div class="d-flex justify-content-center align-items-center" style="min-height:80vh;">
    <div class="card shadow rounded p-4" style="max-width: 420px; width:100%; border: none;">
        <div class="text-center mb-3">
            <span class="avatar-circle bg-primary text-white mb-2">
                <i class="fas fa-user fa-lg"></i>
            </span>
            <h3 class="fw-bold" style="color:#2151b3">Đăng nhập</h3>
        </div>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">@TempData["SuccessMessage"]</div>
        }

        <form asp-action="Login" method="post">
            <input type="hidden" name="ReturnUrl" value="@ViewData["ReturnUrl"]" />
            <div class="mb-3 input-group">
                <span class="input-group-text bg-white"><i class="fas fa-user"></i></span>
                <input class="form-control" name="Username" placeholder="Tên đăng nhập" required />
            </div>
            <div class="mb-3 input-group">
                <span class="input-group-text bg-white"><i class="fas fa-lock"></i></span>
                <input type="password" class="form-control" name="Password" placeholder="Mật khẩu" required />
            </div>
            <button type="submit" class="btn btn-primary w-100 mb-2">Đăng nhập</button>
            <div class="text-center">
                <a asp-controller="Account" asp-action="Register" class="small">Chưa có tài khoản? Đăng ký</a>
            </div>
        </form>

        <div class="text-danger mt-2 small">
            @foreach (var err in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <div>@err.ErrorMessage</div>
            }
        </div>
    </div>
</div>

<style>
    .avatar-circle {
        display: inline-flex;
        justify-content: center;
        align-items: center;
        border-radius: 50%;
        width: 54px;
        height: 54px;
        background: linear-gradient(45deg, #667eea, #764ba2);
        font-size: 2rem;
        margin-bottom: .7rem;
        box-shadow: 0 2px 16px #2151b342;
    }
</style>


