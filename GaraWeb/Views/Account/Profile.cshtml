@{
    ViewData["Title"] = "Quản lý tài khoản";
}

<div class="container" style="margin-top: 100px; margin-bottom: 50px; padding-bottom: 100px;">
    <div class="row">
        <div class="col-md-3">
            <div class="card">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <div class="rounded-circle bg-primary text-white d-inline-flex align-items-center justify-content-center" style="width: 80px; height: 80px; font-size: 32px;">
                            @User.Identity?.Name?.Substring(0, 1).ToUpper()
                        </div>
                    </div>
                    <h5 class="card-title">@User.Identity?.Name</h5>
                    <p class="text-muted">Khách hàng</p>
                </div>
                <div class="list-group list-group-flush">
                    <a asp-action="Profile" class="list-group-item list-group-item-action active">
                        <i class="fas fa-user me-2"></i> Thông tin tài khoản
                    </a>
                    <a asp-action="MyRequests" class="list-group-item list-group-item-action">
                        <i class="fas fa-clipboard-list me-2"></i> Lịch sử yêu cầu dịch vụ
                    </a>
                    <a asp-action="MyContacts" class="list-group-item list-group-item-action">
                        <i class="fas fa-envelope me-2"></i> Lịch sử liên hệ
                    </a>
                    <a asp-action="Logout" class="list-group-item list-group-item-action text-danger">
                        <i class="fas fa-sign-out-alt me-2"></i> Đăng xuất
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-9">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-user me-2"></i> Thông tin tài khoản</h5>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold">Tên đăng nhập:</div>
                        <div class="col-md-8">@User.Identity?.Name</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold">Vai trò:</div>
                        <div class="col-md-8">
                            <span class="badge bg-info">@(User.IsInRole("Admin") ? "Quản trị viên" : "Khách hàng")</span>
                        </div>
                    </div>
                    <hr>
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle me-2"></i>
                        Để cập nhật thông tin chi tiết, vui lòng liên hệ với quản trị viên.
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
