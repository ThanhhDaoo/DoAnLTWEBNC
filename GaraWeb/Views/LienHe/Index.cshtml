@model GaraWeb.Models.ThongTinLienHe
@{
    ViewData["Title"] = "Liên hệ";
}

<div class="container py-5">
    <div class="section-title">
        <h2>Liên hệ với chúng tôi</h2>
        <p>Chúng tôi luôn sẵn sàng hỗ trợ và tư vấn cho bạn</p>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Gửi tin nhắn cho chúng tôi</h5>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="ten" class="form-label">Họ và tên *</label>
                                <input type="text" class="form-control" id="ten" name="ten" required>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="email" class="form-label">Email *</label>
                                <input type="email" class="form-control" id="email" name="email" required>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="soDienThoai" class="form-label">Số điện thoại *</label>
                                <input type="tel" class="form-control" id="soDienThoai" name="soDienThoai" required>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="chuDe" class="form-label">Chủ đề</label>
                                <select class="form-select" id="chuDe" name="chuDe">
                                    <option value="">Chọn chủ đề</option>
                                    <option value="Tư vấn dịch vụ">Tư vấn dịch vụ</option>
                                    <option value="Hỗ trợ kỹ thuật">Hỗ trợ kỹ thuật</option>
                                    <option value="Khiếu nại">Khiếu nại</option>
                                    <option value="Khác">Khác</option>
                                </select>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="noiDung" class="form-label">Nội dung *</label>
                            <textarea class="form-control" id="noiDung" name="noiDung" rows="5" required placeholder="Hãy mô tả chi tiết vấn đề hoặc yêu cầu của bạn..."></textarea>
                        </div>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-paper-plane me-2"></i>Gửi tin nhắn
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Thông tin liên hệ</h5>
                </div>
                <div class="card-body">
                    <div class="mb-4">
                        <h6><i class="fas fa-map-marker-alt text-primary me-2"></i>Địa chỉ</h6>
                        <p class="mb-0">Ngã 4 An Dương Vương, Trần Phú, Quảng Ngãi</p>
                    </div>
                    <div class="mb-4">
                        <h6><i class="fas fa-phone text-primary me-2"></i>Điện thoại</h6>
                        <p class="mb-0">038 442 4567</p>
                    </div>
                    <div class="mb-4">
                        <h6><i class="fas fa-envelope text-primary me-2"></i>Email</h6>
                        <p class="mb-0">contact@mtproauto.vn</p>
                    </div>
                    <div class="mb-4">
                        <h6><i class="fas fa-clock text-primary me-2"></i>Giờ làm việc</h6>
                        <p class="mb-1">@Model.GioMoCua</p>
                        <p class="mb-0">@Model.GioMoCuaChuNhat</p>
                    </div>
                </div>
            </div>

            <div class="card mt-3">
                <div class="card-header">
                    <h6 class="mb-0">Tại sao chọn chúng tôi?</h6>
                </div>
                <div class="card-body">
                    <ul class="list-unstyled">
                        <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Đội ngũ kỹ thuật viên chuyên nghiệp</li>
                        <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Trang thiết bị hiện đại</li>
                        <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Phụ tùng chính hãng</li>
                        <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Bảo hành dài hạn</li>
                        <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Giá cả cạnh tranh</li>
                        <li class="mb-0"><i class="fas fa-check text-success me-2"></i>Dịch vụ khách hàng tận tình</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <!-- Bản đồ -->
    <div class="row mt-5">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Vị trí của chúng tôi</h5>
                </div>
                <div class="card-body p-0">
                    <div style="position: relative; padding-bottom: 0; height: 400px; overflow: hidden;">
                        <iframe
                            src="https://www.google.com/maps?q=Ng%C3%A3%204%20An%20D%C6%B0%C6%A1ng%20V%C6%B0%C6%A1ng,%20Tr%E1%BA%A7n%20Ph%C3%BA,%20Qu%E1%BA%A3ng%20Ng%C3%A3i&output=embed"
                            width="100%"
                            height="400"
                            style="border:0;"
                            allowfullscreen=""
                            loading="lazy"
                            referrerpolicy="no-referrer-when-downgrade"></iframe>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
