@model GaraWeb.Models.ThongTinLienHe
@{
    ViewData["Title"] = "Liên hệ";
}

<style>
    .page-header {
        background: var(--gradient-primary);
        color: white;
        padding: 4rem 0 3rem;
        margin-bottom: 3rem;
        position: relative;
        overflow: hidden;
    }

    .page-header::before {
        content: '';
        position: absolute;
        top: -50%;
        right: -10%;
        width: 400px;
        height: 400px;
        background: rgba(255, 255, 255, 0.1);
        border-radius: 50%;
    }

    .page-header h1 {
        font-size: 3rem;
        font-weight: 800;
        margin-bottom: 1rem;
        position: relative;
        z-index: 2;
    }

    .page-header p {
        font-size: 1.2rem;
        opacity: 0.95;
        position: relative;
        z-index: 2;
    }

    .contact-card {
        background: white !important;
        border: 1px solid var(--gray-light) !important;
        border-radius: var(--radius-xl) !important;
        box-shadow: var(--shadow-md);
        padding: 2.5rem !important;
        margin-bottom: 2rem;
        transition: all var(--transition-base);
    }

    .contact-card:hover {
        box-shadow: var(--shadow-lg);
        transform: translateY(-2px);
    }

    .contact-card h3 {
        font-size: 1.5rem;
        font-weight: 800;
        color: var(--dark) !important;
        margin-bottom: 1.5rem;
    }

    .info-item {
        display: flex;
        align-items: start;
        padding: 1.5rem;
        background: var(--light) !important;
        border-radius: var(--radius-md) !important;
        margin-bottom: 1rem;
        transition: all var(--transition-base);
        border: 1px solid var(--gray-light);
    }

    .info-item:hover {
        background: rgba(14, 165, 233, 0.05) !important;
        transform: translateX(4px);
        border-color: var(--primary);
    }

    .info-icon {
        width: 50px;
        height: 50px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: var(--radius-md) !important;
        background: var(--gradient-primary) !important;
        color: white;
        font-size: 1.5rem;
        margin-right: 1rem;
        flex-shrink: 0;
        box-shadow: var(--shadow-md);
    }

    .info-content h6 {
        font-weight: 700;
        color: var(--dark) !important;
        margin-bottom: 0.5rem;
        font-size: 1rem;
    }

    .info-content p {
        color: var(--gray) !important;
        margin: 0;
        line-height: 1.6;
    }

    .info-content a {
        color: var(--gray) !important;
        text-decoration: none !important;
        transition: color var(--transition-base);
    }

    .info-content a:hover {
        color: var(--primary) !important;
    }

    .feature-list {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .feature-list li {
        padding: 0.85rem 0;
        border-bottom: 1px solid var(--gray-light);
        display: flex;
        align-items: center;
        color: var(--gray) !important;
    }

    .feature-list li:last-child {
        border-bottom: none;
    }

    .feature-list i {
        width: 28px;
        height: 28px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 50%;
        background: rgba(16, 185, 129, 0.15) !important;
        color: var(--success) !important;
        margin-right: 1rem;
        font-size: 0.8rem;
        flex-shrink: 0;
    }

    .map-container {
        border-radius: var(--radius-lg) !important;
        overflow: hidden;
        box-shadow: var(--shadow-md);
    }

    @@media (max-width: 768px) {
        .page-header h1 { font-size: 2rem; }
    }
</style>

<div class="page-header">
    <div class="container text-center">
        <h1>Liên hệ với chúng tôi</h1>
        <p>Chúng tôi luôn sẵn sàng hỗ trợ và tư vấn cho bạn</p>
    </div>
</div>

<div class="container pb-5">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
        </div>
    }

    <div class="row g-4">
        <div class="col-lg-8">
            <div class="contact-card">
                <h3><i class="fas fa-envelope me-2"></i>Gửi tin nhắn cho chúng tôi</h3>
                <form method="post">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="ten" class="form-label">Họ và tên *</label>
                            <input type="text" class="form-control" id="ten" name="ten" placeholder="Nguyễn Văn A" required>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="email" class="form-label">Email *</label>
                            <input type="email" class="form-control" id="email" name="email" placeholder="example@email.com" required>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="soDienThoai" class="form-label">Số điện thoại *</label>
                            <input type="tel" class="form-control" id="soDienThoai" name="soDienThoai" placeholder="0123456789" required>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="chuDe" class="form-label">Chủ đề</label>
                            <select class="form-select" id="chuDe" name="chuDe">
                                <option value="">Chọn chủ đề</option>
                                <option value="Tư vấn dịch vụ">Tư vấn dịch vụ</option>
                                <option value="Hỗ trợ kỹ thuật">Hỗ trợ kỹ thuật</option>
                                <option value="Khiếu nại">Khiếu nại</option>
                                <option value="Khác">Khác</option>
                            </select>
                        </div>
                    </div>
                    <div class="mb-4">
                        <label for="noiDung" class="form-label">Nội dung *</label>
                        <textarea class="form-control" id="noiDung" name="noiDung" rows="6" required placeholder="Hãy mô tả chi tiết vấn đề hoặc yêu cầu của bạn..."></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary btn-lg w-100">
                        <i class="fas fa-paper-plane me-2"></i>Gửi tin nhắn
                    </button>
                </form>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="contact-card">
                <h3><i class="fas fa-info-circle me-2"></i>Thông tin liên hệ</h3>
                <div class="info-item">
                    <div class="info-icon">
                        <i class="fas fa-map-marker-alt"></i>
                    </div>
                    <div class="info-content">
                        <h6>Địa chỉ</h6>
                        <p>Ngã 4 An Dương Vương, Trần Phú, Quảng Ngãi</p>
                    </div>
                </div>
                <div class="info-item">
                    <div class="info-icon">
                        <i class="fas fa-phone"></i>
                    </div>
                    <div class="info-content">
                        <h6>Điện thoại</h6>
                        <p><a href="tel:0384424567">038 442 4567</a></p>
                    </div>
                </div>
                <div class="info-item">
                    <div class="info-icon">
                        <i class="fas fa-envelope"></i>
                    </div>
                    <div class="info-content">
                        <h6>Email</h6>
                        <p><a href="mailto:contact@mtproauto.vn">contact@mtproauto.vn</a></p>
                    </div>
                </div>
                <div class="info-item">
                    <div class="info-icon">
                        <i class="fas fa-clock"></i>
                    </div>
                    <div class="info-content">
                        <h6>Giờ làm việc</h6>
                        <p>@Model.GioMoCua<br>@Model.GioMoCuaChuNhat</p>
                    </div>
                </div>
            </div>

            <div class="contact-card">
                <h3><i class="fas fa-star me-2"></i>Tại sao chọn chúng tôi?</h3>
                <ul class="feature-list">
                    <li><i class="fas fa-check"></i>Đội ngũ kỹ thuật viên chuyên nghiệp</li>
                    <li><i class="fas fa-check"></i>Trang thiết bị hiện đại</li>
                    <li><i class="fas fa-check"></i>Phụ tùng chính hãng</li>
                    <li><i class="fas fa-check"></i>Bảo hành dài hạn</li>
                    <li><i class="fas fa-check"></i>Giá cả cạnh tranh</li>
                    <li><i class="fas fa-check"></i>Dịch vụ khách hàng tận tình</li>
                </ul>
            </div>
        </div>
    </div>

    <!-- Bản đồ -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="contact-card">
                <h3><i class="fas fa-map-marked-alt me-2"></i>Vị trí của chúng tôi</h3>
                <div class="map-container">
                    <iframe
                        src="https://www.google.com/maps?q=Ng%C3%A3%204%20An%20D%C6%B0%C6%A1ng%20V%C6%B0%C6%A1ng,%20Tr%E1%BA%A7n%20Ph%C3%BA,%20Qu%E1%BA%A3ng%20Ng%C3%A3i&output=embed"
                        width="100%"
                        height="450"
                        style="border:0;"
                        allowfullscreen=""
                        loading="lazy"
                        referrerpolicy="no-referrer-when-downgrade"></iframe>
                </div>
            </div>
        </div>
    </div>
</div>
