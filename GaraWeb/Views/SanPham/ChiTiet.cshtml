@model GaraWeb.Models.SanPham
@{
    ViewData["Title"] = Model.TenSanPham;
}

<div class="container py-5">
    <div class="row">
        <div class="col-lg-6">
            <img src="@(string.IsNullOrEmpty(Model.HinhAnh) ? "https://via.placeholder.com/600x400/764ba2/ffffff?text=" + Model.TenSanPham : Model.HinhAnh)" 
                 class="img-fluid rounded" alt="@Model.TenSanPham">
        </div>
        <div class="col-lg-6">
            <h1 class="mb-3">@Model.TenSanPham</h1>
            <p class="lead">@Model.MoTa</p>
            
            <div class="mb-4">
                <h3 class="text-primary">@Model.Gia.ToString("N0") VNĐ</h3>
            </div>

            <div class="mb-4">
                @if (Model.SoLuongTon > 0)
                {
                    <span class="badge bg-success fs-6">Còn hàng (@Model.SoLuongTon sản phẩm)</span>
                }
                else
                {
                    <span class="badge bg-warning fs-6">Hết hàng</span>
                }
            </div>

            @if (Model.SoLuongTon > 0)
            {
                <div class="row mb-4">
                    <div class="col-4">
                        <label for="soLuong" class="form-label">Số lượng:</label>
                        <input type="number" class="form-control" id="soLuong" value="1" min="1" max="@Model.SoLuongTon">
                    </div>
                </div>
                
                <div class="d-grid gap-2 d-md-flex">
                    <button class="btn btn-primary btn-lg" onclick="addToCart(@Model.Id)">
                        <i class="fas fa-shopping-cart me-2"></i>Thêm vào giỏ hàng
                    </button>
                    <a href="@Url.Action("Index", "SanPham")" class="btn btn-outline-secondary btn-lg">
                        <i class="fas fa-arrow-left me-2"></i>Quay lại
                    </a>
                </div>
            }
            else
            {
                <div class="alert alert-warning" role="alert">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    Sản phẩm hiện tại không khả dụng.
                </div>
                <a href="@Url.Action("Index", "SanPham")" class="btn btn-outline-secondary btn-lg">
                    <i class="fas fa-arrow-left me-2"></i>Quay lại
                </a>
            }
        </div>
    </div>

    <!-- Thông tin chi tiết -->
    <div class="row mt-5">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Thông tin chi tiết</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h6>Thông tin sản phẩm</h6>
                            <ul class="list-unstyled">
                                <li><strong>Tên sản phẩm:</strong> @Model.TenSanPham</li>
                                <li><strong>Giá:</strong> @Model.Gia.ToString("N0") VNĐ</li>
                                <li><strong>Số lượng tồn:</strong> @Model.SoLuongTon sản phẩm</li>
                                <li><strong>Trạng thái:</strong> 
                                    @if (Model.SoLuongTon > 0)
                                    {
                                        <span class="text-success">Còn hàng</span>
                                    }
                                    else
                                    {
                                        <span class="text-warning">Hết hàng</span>
                                    }
                                </li>
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <h6>Mô tả</h6>
                            <p>@Model.MoTa</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function addToCart(sanPhamId) {
            var soLuong = parseInt($('#soLuong').val());
            if (soLuong < 1) {
                alert('Số lượng phải lớn hơn 0');
                return;
            }
            
            $.post('@Url.Action("ThemVaoGioHang", "SanPham")', {
                sanPhamId: sanPhamId,
                soLuong: soLuong
            }, function(data) {
                if (data.success) {
                    updateCartCount();
                    alert('Đã thêm ' + soLuong + ' sản phẩm vào giỏ hàng!');
                } else {
                    alert('Có lỗi xảy ra: ' + data.message);
                }
            });
        }
    </script>
}
