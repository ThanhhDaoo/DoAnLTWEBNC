@model List<GaraWeb.Models.GioHangItem>
@{
    ViewData["Title"] = "Giỏ hàng";
}

<div class="container py-5">
    <h2 class="mb-4">Giỏ hàng của bạn</h2>

    @if (Model.Any())
    {
        <div class="row">
            <div class="col-lg-8">
                <div class="card">
                    <div class="card-body">
                        @foreach (var item in Model)
                        {
                            <div class="row align-items-center border-bottom py-3">
                                <div class="col-md-2">
                                    <img src="@(string.IsNullOrEmpty(item.HinhAnh) ? "https://via.placeholder.com/100x100/764ba2/ffffff?text=" + item.TenSanPham : item.HinhAnh)" 
                                         class="img-fluid rounded" alt="@item.TenSanPham" style="width: 80px; height: 80px; object-fit: cover;">
                                </div>
                                <div class="col-md-4">
                                    <h6 class="mb-1">@item.TenSanPham</h6>
                                    <p class="text-muted mb-0">@item.Gia.ToString("N0") VNĐ</p>
                                </div>
                                <div class="col-md-3">
                                    <form method="post" asp-action="CapNhatGioHang" class="d-flex align-items-center">
                                        <input type="hidden" name="sanPhamId" value="@item.SanPhamId">
                                        <input type="number" name="soLuong" value="@item.SoLuong" min="1" class="form-control me-2" style="width: 80px;">
                                        <button type="submit" class="btn btn-outline-primary btn-sm">
                                            <i class="fas fa-sync"></i>
                                        </button>
                                    </form>
                                </div>
                                <div class="col-md-2">
                                    <h6 class="text-primary mb-0">@item.ThanhTien.ToString("N0") VNĐ</h6>
                                </div>
                                <div class="col-md-1">
                                    <form method="post" asp-action="XoaKhoiGioHang">
                                        <input type="hidden" name="sanPhamId" value="@item.SanPhamId">
                                        <button type="submit" class="btn btn-outline-danger btn-sm" onclick="return confirm('Bạn có chắc muốn xóa sản phẩm này?')">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">Tổng kết</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between mb-2">
                            <span>Tạm tính:</span>
                            <span>@Model.Sum(x => x.ThanhTien).ToString("N0") VNĐ</span>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span>Phí vận chuyển:</span>
                            <span>Miễn phí</span>
                        </div>
                        <hr>
                        <div class="d-flex justify-content-between">
                            <strong>Tổng cộng:</strong>
                            <strong class="text-primary">@Model.Sum(x => x.ThanhTien).ToString("N0") VNĐ</strong>
                        </div>
                        <div class="d-grid gap-2 mt-3">
                            <button class="btn btn-primary btn-lg" onclick="checkout()">
                                <i class="fas fa-credit-card me-2"></i>Thanh toán
                            </button>
                            <a href="@Url.Action("Index", "SanPham")" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Tiếp tục mua sắm
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <i class="fas fa-shopping-cart fa-3x text-muted mb-3"></i>
            <h4 class="text-muted">Giỏ hàng trống</h4>
            <p class="text-muted">Hãy thêm một số sản phẩm vào giỏ hàng của bạn.</p>
            <a href="@Url.Action("Index", "SanPham")" class="btn btn-primary">
                <i class="fas fa-shopping-bag me-2"></i>Mua sắm ngay
            </a>
        </div>
    }
</div>

@section Scripts {
    <script>
        function checkout() {
            alert('Tính năng thanh toán đang được phát triển. Vui lòng liên hệ trực tiếp để đặt hàng.');
        }
    </script>
}
