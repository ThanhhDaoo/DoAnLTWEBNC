@{
    ViewData["Title"] = "Trang chủ";
    var dichVus = ViewBag.DichVus as List<GaraWeb.Models.DichVu> ?? new List<GaraWeb.Models.DichVu>();
    var sanPhams = ViewBag.SanPhams as List<GaraWeb.Models.SanPham> ?? new List<GaraWeb.Models.SanPham>();
}

<style>
    main[style] { margin-top: 0 !important; }
    
    /* Hero Section */
    .hero-modern {
        position: relative;
        min-height: 90vh;
        display: flex;
        align-items: center;
        background: linear-gradient(135deg, rgba(14, 165, 233, 0.05) 0%, rgba(6, 182, 212, 0.05) 100%);
        overflow: hidden;
    }

    .hero-modern::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: url('https://images.pexels.com/photos/3806288/pexels-photo-3806288.jpeg') center/cover;
        opacity: 0.08;
        z-index: 0;
    }

    .hero-content {
        position: relative;
        z-index: 2;
        text-align: center;
        padding: 4rem 0;
    }

    .hero-content h1 {
        font-size: 4rem;
        font-weight: 800;
        margin-bottom: 1.5rem;
        line-height: 1.2;
        color: var(--dark);
        animation: fadeInUp 0.8s ease-out;
    }

    .hero-content p {
        font-size: 1.4rem;
        margin-bottom: 2.5rem;
        color: var(--gray);
        animation: fadeInUp 1s ease-out;
    }

    .hero-buttons {
        display: flex;
        gap: 1rem;
        justify-content: center;
        flex-wrap: wrap;
        animation: fadeInUp 1.2s ease-out;
    }

    .btn-hero {
        padding: 1rem 2.5rem;
        font-size: 1.05rem;
        font-weight: 700;
        border-radius: var(--radius-md);
        transition: all var(--transition-base);
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
    }

    .btn-hero-primary {
        background: var(--gradient-primary);
        color: white !important;
        box-shadow: var(--shadow-lg);
        border: none;
    }

    .btn-hero-primary:hover {
        transform: translateY(-4px);
        box-shadow: var(--shadow-xl);
    }

    .btn-hero-outline {
        background: white;
        color: var(--primary) !important;
        border: 2px solid var(--primary);
        box-shadow: var(--shadow-md);
    }

    .btn-hero-outline:hover {
        background: var(--primary);
        color: white !important;
        transform: translateY(-4px);
        box-shadow: var(--shadow-lg);
    }

    /* Stats Section */
    .stats-section {
        background: white;
        padding: 3rem 0;
        margin-top: 0;
    }

    .stat-card {
        text-align: center;
        padding: 2rem;
        border-radius: var(--radius-xl);
        background: white;
        border: 1px solid var(--gray-light);
        box-shadow: var(--shadow-md);
        transition: all var(--transition-base);
    }

    .stat-card:hover {
        transform: translateY(-8px);
        box-shadow: var(--shadow-xl);
        border-color: var(--primary);
    }

    .stat-icon {
        width: 70px;
        height: 70px;
        margin: 0 auto 1rem;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 50%;
        background: var(--gradient-primary);
        color: white;
        font-size: 2rem;
        box-shadow: var(--shadow-md);
    }

    .stat-number {
        font-size: 2.5rem;
        font-weight: 800;
        color: var(--dark);
        margin-bottom: 0.5rem;
    }

    .stat-label {
        color: var(--gray);
        font-size: 1rem;
    }

    /* Feature Cards */
    .feature-card {
        padding: 2rem;
        border-radius: var(--radius-xl);
        background: white;
        border: 1px solid var(--gray-light);
        box-shadow: var(--shadow-md);
        transition: all var(--transition-base);
        height: 100%;
    }

    .feature-card:hover {
        transform: translateY(-8px);
        box-shadow: var(--shadow-xl);
        border-color: var(--primary);
    }

    .feature-icon {
        width: 60px;
        height: 60px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: var(--radius-md);
        background: var(--gradient-primary);
        color: white;
        font-size: 1.8rem;
        margin-bottom: 1.5rem;
        box-shadow: var(--shadow-md);
    }

    .feature-card h4 {
        font-weight: 700;
        color: var(--dark);
        margin-bottom: 1rem;
    }

    .feature-card p {
        color: var(--gray);
        line-height: 1.7;
    }

    /* Service & Product Cards Hover */
    .service-card:hover,
    .product-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 12px 24px rgba(0, 0, 0, 0.15) !important;
        border-color: #06b6d4 !important;
    }

    .service-card:hover img,
    .product-card:hover img {
        transform: scale(1.1);
    }

    .service-card .btn:hover,
    .product-card .btn:hover {
        background: #0891b2 !important;
        transform: translateY(-1px);
        box-shadow: 0 4px 12px rgba(6, 182, 212, 0.3);
    }

    /* CTA Section */
    .cta-section {
        background: var(--gradient-primary);
        color: white;
        padding: 5rem 0;
        text-align: center;
        position: relative;
        overflow: hidden;
        border-radius: var(--radius-xl);
        margin: 0 1rem;
    }

    .cta-section::before {
        content: '';
        position: absolute;
        top: -50%;
        right: -10%;
        width: 500px;
        height: 500px;
        background: rgba(255, 255, 255, 0.1);
        border-radius: 50%;
    }

    .cta-section::after {
        content: '';
        position: absolute;
        bottom: -50%;
        left: -10%;
        width: 500px;
        height: 500px;
        background: rgba(255, 255, 255, 0.1);
        border-radius: 50%;
    }

    .cta-content {
        position: relative;
        z-index: 2;
    }

    .cta-content h2 {
        font-size: 3rem;
        font-weight: 800;
        margin-bottom: 1.5rem;
    }

    .cta-content p {
        font-size: 1.3rem;
        margin-bottom: 2rem;
        opacity: 0.95;
    }

    @@media (max-width: 768px) {
        .hero-content h1 { font-size: 2.5rem; }
        .hero-content p { font-size: 1.1rem; }
        .stat-number { font-size: 2rem; }
        .cta-content h2 { font-size: 2rem; }
        .cta-section { margin: 0; border-radius: 0; }
    }
</style>

