@{
    ViewData["Title"] = "Trang chủ";
    var dichVus = ViewBag.DichVus as List<GaraWeb.Models.DichVu> ?? new List<GaraWeb.Models.DichVu>();
    var sanPhams = ViewBag.SanPhams as List<GaraWeb.Models.SanPham> ?? new List<GaraWeb.Models.SanPham>();
}

<!-- Hero Section -->
<style>
    /* remove default space under fixed header on this page */
    .navbar { margin-bottom: 0 !important; }
    main[style] { margin-top: 0 !important; }

    .hero-section {
        background: url('https://images.pexels.com/photos/33169327/pexels-photo-33169327.jpeg') center top/contain no-repeat;
        background-color: #000;
        color: #f3f4f6;
        padding: 100px 0 110px;
        text-align: center;
        margin-top: 0;
        min-height: 100vh;
        display: flex;
        align-items: center;
    }
    .hero-section h1 {
        font-size: 3.2rem;
        font-weight: 700;
        margin-bottom: 16px;
        color: #ffffff;
        text-shadow: 0 2px 8px rgba(0, 0, 0, 0.45);
    }
    .hero-section p {
        font-size: 1.25rem;
        margin-bottom: 28px;
        color: #f1f5f9;
        text-shadow: 0 1px 6px rgba(0, 0, 0, 0.4);
    }
    @@media (max-width: 576px) {
        .hero-section { padding: 70px 0; }
        .hero-section h1 { font-size: 2.2rem; }
    }
    </style>
<section class="hero-section">
    <div class="container">
        <h1>Chào mừng đến với MTProAuto</h1>
        <p>Dịch vụ sửa chữa, bảo dưỡng và phụ tùng ô tô chuyên nghiệp</p>
        <a href="#services" class="btn btn-primary btn-lg">Khám phá dịch vụ</a>
    </div>
</section>

<!-- About Section -->
<section class="py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h2 class="mb-4">Về chúng tôi</h2>
                <p class="lead">Với hơn 10 năm kinh nghiệm trong lĩnh vực sửa chữa và bảo dưỡng ô tô, MTProAuto tự hào là địa chỉ tin cậy của hàng nghìn khách hàng.</p>
                <p>Chúng tôi cam kết mang đến dịch vụ chất lượng cao với đội ngũ kỹ thuật viên chuyên nghiệp và trang thiết bị hiện đại.</p>
                <ul class="list-unstyled">
                    <li><i class="fas fa-check text-success me-2"></i>Đội ngũ kỹ thuật viên chuyên nghiệp</li>
                    <li><i class="fas fa-check text-success me-2"></i>Trang thiết bị hiện đại</li>
                    <li><i class="fas fa-check text-success me-2"></i>Phụ tùng chính hãng</li>
                    <li><i class="fas fa-check text-success me-2"></i>Bảo hành dài hạn</li>
                </ul>
            </div>
            <div class="col-lg-6">
                <img src="https://images.pexels.com/photos/7541353/pexels-photo-7541353.jpeg" alt="MTProAuto" class="img-fluid rounded">
            </div>
        </div>
    </div>
</section>

<!-- Services Section -->
<section id="services" class="py-5 bg-light">
    <div class="container">
        <div class="section-title">
            <h2>Dịch vụ của chúng tôi</h2>
            <p>Chúng tôi cung cấp đầy đủ các dịch vụ sửa chữa và bảo dưỡng ô tô</p>
        </div>
        <div class="row">
            @foreach (var dichVu in dichVus)
            {
                <div class="col-md-4 mb-4">
                    <div class="card service-card h-100">
                        <img src="@(string.IsNullOrEmpty(dichVu.HinhAnh) ? "https://via.placeholder.com/300x200/667eea/ffffff?text=" + dichVu.TenDichVu : dichVu.HinhAnh)" 
                             class="card-img-top" alt="@dichVu.TenDichVu" style="height: 200px; object-fit: cover;">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@dichVu.TenDichVu</h5>
                            <p class="card-text">@dichVu.MoTa</p>
                            <div class="mt-auto">
                                <div class="d-flex justify-content-between align-items-center">
                                    <span class="h5 text-primary mb-0">@dichVu.Gia.ToString("N0") VNĐ</span>
                                    <a href="@Url.Action("DatDichVu", "DichVu", new { id = dichVu.Id })" class="btn btn-primary">Đặt dịch vụ</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="text-center mt-4">
            <a href="@Url.Action("Index", "DichVu")" class="btn btn-outline-primary">Xem tất cả dịch vụ</a>
        </div>
    </div>
</section>

<!-- Products Section -->
<section class="py-5">
    <div class="container">
        <div class="section-title">
            <h2>Sản phẩm nổi bật</h2>
            <p>Phụ tùng và phụ kiện ô tô chính hãng, chất lượng cao</p>
        </div>
        <div class="row">
            @foreach (var sanPham in sanPhams.Take(3))
            {
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card product-card h-100">
                        <img src="@(string.IsNullOrEmpty(sanPham.HinhAnh) ? "https://via.placeholder.com/300x200/764ba2/ffffff?text=" + sanPham.TenSanPham : sanPham.HinhAnh)" 
                             class="card-img-top" alt="@sanPham.TenSanPham" style="height: 200px; object-fit: cover;">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@sanPham.TenSanPham</h5>
                            <p class="card-text">@sanPham.MoTa</p>
                            <div class="mt-auto">
                                <div class="d-flex justify-content-between align-items-center">
                                    <span class="h5 text-primary mb-0">@sanPham.Gia.ToString("N0") VNĐ</span>
                                    <button class="btn btn-primary" onclick="addToCart(@sanPham.Id)">
                                        <i class="fas fa-shopping-cart me-1"></i>Thêm vào giỏ
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="text-center mt-4">
            <a href="@Url.Action("Index", "SanPham")" class="btn btn-outline-primary">Xem tất cả sản phẩm</a>
        </div>
    </div>
</section>

<!-- Contact CTA Section -->
<section class="py-5 bg-primary text-white">
    <div class="container text-center">
        <h2 class="mb-4">Cần tư vấn hoặc hỗ trợ?</h2>
        <p class="lead mb-4">Liên hệ với chúng tôi ngay hôm nay để được tư vấn miễn phí</p>
        <a href="@Url.Action("Index", "LienHe")" class="btn btn-light btn-lg">Liên hệ ngay</a>
    </div>
</section>

@section Scripts {
    <script>
        function addToCart(sanPhamId) {
            $.post('@Url.Action("ThemVaoGioHang", "SanPham")', {
                sanPhamId: sanPhamId,
                soLuong: 1
            }, function(data) {
                if (data.success) {
                    updateCartCount();
                    alert('Đã thêm sản phẩm vào giỏ hàng!');
                } else {
                    alert('Có lỗi xảy ra: ' + data.message);
                }
            });
        }
    </script>
}
