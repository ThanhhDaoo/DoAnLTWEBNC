<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MTProAuto</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/modern-template.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg fixed-top">
            <div class="container">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-car-side me-2"></i>MTProAuto
                </a>
                <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav mx-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home me-1"></i>Trang chủ
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="DichVu" asp-action="Index">
                                <i class="fas fa-tools me-1"></i>Dịch vụ
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="SanPham" asp-action="Index">
                                <i class="fas fa-box me-1"></i>Sản phẩm
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="LienHe" asp-action="Index">
                                <i class="fas fa-envelope me-1"></i>Liên hệ
                            </a>
                        </li>
                    </ul>
                    <ul class="navbar-nav align-items-center">
                        <li class="nav-item position-relative me-3">
                            <a class="nav-link" asp-controller="SanPham" asp-action="GioHang">
                                <i class="fas fa-shopping-cart fa-lg"></i>
                                <span class="cart-badge" id="cartCount">0</span>
                            </a>
                        </li>
                        <li class="nav-item dropdown">
                            @if (User.Identity != null && User.Identity.IsAuthenticated)
                            {
                                var userName = User.Identity.Name ?? "";
                                var firstChar = userName.Length > 0 ? userName.Substring(0,1).ToUpper() : "U";
                            <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <span class="avatar-circle me-2">@firstChar</span>
                                <span class="d-none d-md-inline">@userName</span>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end shadow-lg border-0" aria-labelledby="userDropdown" style="border-radius: 12px; backdrop-filter: blur(10px); background: rgba(255, 255, 255, 0.95);">
                                <li>
                                    <a class="dropdown-item" asp-controller="Account" asp-action="Profile">
                                        <i class="fas fa-user me-2"></i>Thông tin tài khoản
                                    </a>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Account" asp-action="MyRequests">
                                        <i class="fas fa-clipboard-list me-2"></i>Lịch sử yêu cầu dịch vụ
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Account" asp-action="MyContacts">
                                        <i class="fas fa-envelope me-2"></i>Lịch sử liên hệ
                                    </a>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <form method="post" asp-controller="Account" asp-action="Logout" style="display:inline;">
                                        <button type="submit" class="dropdown-item text-danger">
                                            <i class="fas fa-sign-out-alt me-2"></i>Đăng xuất
                                        </button>
                                    </form>
                                </li>
                            </ul>
                            }
                            else
                            {
                            <a class="nav-link d-flex align-items-center" asp-controller="Account" asp-action="Login">
                                <i class="fas fa-user-circle fa-lg me-2"></i>
                                <span class="d-none d-md-inline">Đăng nhập</span>
                            </a>
                            }
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main style="margin-top: 76px;">
        @RenderBody()
    </main>


        
        <!-- Footer Main -->
        <div class="footer-main">
            <div class="container">
                <div class="row g-5">
                    <!-- Logo & About -->
                    <div class="col-lg-4 col-md-6">
                        <div class="footer-about">
                            <a href="/" class="footer-logo">
                                <i class="fas fa-car-side"></i>
                                <span>MTProAuto</span>
                            </a>
                            <p>Chuyên cung cấp dịch vụ sửa chữa, bảo dưỡng và phụ tùng ô tô chất lượng cao với đội ngũ kỹ thuật viên chuyên nghiệp hàng đầu.</p>
                            <div class="footer-social">
                                <a href="#" class="social-link"><i class="fab fa-facebook-f"></i></a>
                                <a href="#" class="social-link"><i class="fab fa-instagram"></i></a>
                                <a href="#" class="social-link"><i class="fab fa-youtube"></i></a>
                                <a href="#" class="social-link"><i class="fab fa-tiktok"></i></a>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Quick Links -->
                    <div class="col-lg-2 col-md-6">
                        <div class="footer-links">
                            <h4>Liên kết</h4>
                            <ul>
                                <li><a asp-controller="Home" asp-action="Index"><i class="fas fa-chevron-right"></i> Trang chủ</a></li>
                                <li><a asp-controller="DichVu" asp-action="Index"><i class="fas fa-chevron-right"></i> Dịch vụ</a></li>
                                <li><a asp-controller="SanPham" asp-action="Index"><i class="fas fa-chevron-right"></i> Sản phẩm</a></li>
                                <li><a asp-controller="LienHe" asp-action="Index"><i class="fas fa-chevron-right"></i> Liên hệ</a></li>
                            </ul>
                        </div>
                    </div>
                    
                    <!-- Services -->
                    <div class="col-lg-3 col-md-6">
                        <div class="footer-links">
                            <h4>Dịch vụ</h4>
                            <ul>
                                <li><a href="#"><i class="fas fa-chevron-right"></i> Bảo dưỡng định kỳ</a></li>
                                <li><a href="#"><i class="fas fa-chevron-right"></i> Sửa chữa động cơ</a></li>
                                <li><a href="#"><i class="fas fa-chevron-right"></i> Thay dầu máy</a></li>
                                <li><a href="#"><i class="fas fa-chevron-right"></i> Sơn xe chuyên nghiệp</a></li>
                                <li><a href="#"><i class="fas fa-chevron-right"></i> Kiểm tra tổng quát</a></li>
                            </ul>
                        </div>
                    </div>
                    
                    <!-- Contact Info -->
                    <div class="col-lg-3 col-md-6">
                        <div class="footer-contact">
                            <h4>Liên hệ</h4>
                            <div class="contact-item">
                                <div class="contact-icon">
                                    <i class="fas fa-map-marker-alt"></i>
                                </div>
                                <div class="contact-text">
                                    <span>Ngã 4 An Dương Vương, Trần Phú, Quảng Ngãi</span>
                                </div>
                            </div>
                            <div class="contact-item">
                                <div class="contact-icon">
                                    <i class="fas fa-phone-alt"></i>
                                </div>
                                <div class="contact-text">
                                    <a href="tel:0384424567">038 442 4567</a>
                                </div>
                            </div>
                            <div class="contact-item">
                                <div class="contact-icon">
                                    <i class="fas fa-envelope"></i>
                                </div>
                                <div class="contact-text">
                                    <a href="mailto:contact@mtproauto.vn">contact@mtproauto.vn</a>
                                </div>
                            </div>
                            <div class="contact-item">
                                <div class="contact-icon">
                                    <i class="fas fa-clock"></i>
                                </div>
                                <div class="contact-text">
                                    <span>7:00 - 18:00 (T2 - CN)</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Footer Bottom -->
        <div class="footer-bottom">
            <div class="container">
                <div class="footer-bottom-content">
                    <p>&copy; 2025 MTProAuto. Tất cả quyền được bảo lưu.</p>
                    <div class="footer-bottom-links">
                        <a href="#">Chính sách bảo mật</a>
                        <a href="#">Điều khoản sử dụng</a>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        // Cập nhật số lượng giỏ hàng
        function updateCartCount() {
            $.get('@Url.Action("GetCartCount", "SanPham")', function(data) {
                $('#cartCount').text(data);
            });
        }

        // Gọi khi trang load
        $(document).ready(function() {
            updateCartCount();
            
            // Navbar scroll effect
            $(window).scroll(function() {
                if ($(this).scrollTop() > 50) {
                    $('.navbar').addClass('scrolled');
                } else {
                    $('.navbar').removeClass('scrolled');
                }
            });
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
