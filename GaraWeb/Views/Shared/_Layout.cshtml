<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MTProAuto</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/modern-template.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg fixed-top">
            <div class="container">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-car-side me-2"></i>MTProAuto
                </a>
                <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav mx-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home me-1"></i>Trang chủ
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="DichVu" asp-action="Index">
                                <i class="fas fa-tools me-1"></i>Dịch vụ
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="SanPham" asp-action="Index">
                                <i class="fas fa-box me-1"></i>Sản phẩm
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="LienHe" asp-action="Index">
                                <i class="fas fa-envelope me-1"></i>Liên hệ
                            </a>
                        </li>
                    </ul>
                    <ul class="navbar-nav align-items-center">
                        <li class="nav-item position-relative me-3">
                            <a class="nav-link" asp-controller="SanPham" asp-action="GioHang">
                                <i class="fas fa-shopping-cart fa-lg"></i>
                                <span class="cart-badge" id="cartCount">0</span>
                            </a>
                        </li>
                        <li class="nav-item dropdown">
                            @if (User.Identity != null && User.Identity.IsAuthenticated)
                            {
                                var userName = User.Identity.Name ?? "";
                                var firstChar = userName.Length > 0 ? userName.Substring(0,1).ToUpper() : "U";
                            <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <span class="avatar-circle me-2">@firstChar</span>
                                <span class="d-none d-md-inline">@userName</span>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end shadow-lg border-0" aria-labelledby="userDropdown" style="border-radius: 12px; backdrop-filter: blur(10px); background: rgba(255, 255, 255, 0.95);">
                                <li>
                                    <form method="post" asp-controller="Account" asp-action="Logout" style="display:inline;">
                                        <button type="submit" class="dropdown-item">
                                            <i class="fas fa-sign-out-alt me-2"></i>Đăng xuất
                                        </button>
                                    </form>
                                </li>
                            </ul>
                            }
                            else
                            {
                            <a class="nav-link d-flex align-items-center" asp-controller="Account" asp-action="Login">
                                <i class="fas fa-user-circle fa-lg me-2"></i>
                                <span class="d-none d-md-inline">Đăng nhập</span>
                            </a>
                            }
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main style="margin-top: 76px;">
        @RenderBody()
    </main>

    <footer class="footer">
        <div class="container">
            <div class="row g-4">
                <div class="col-lg-4 col-md-6">
                    <h5><i class="fas fa-car-side me-2"></i>MTProAuto</h5>
                    <p class="mb-3">Chuyên cung cấp dịch vụ sửa chữa, bảo dưỡng và phụ tùng ô tô chất lượng cao với đội ngũ kỹ thuật viên chuyên nghiệp.</p>
                    <div class="d-flex gap-3">
                        <a href="#"><i class="fab fa-facebook fa-lg"></i></a>
                        <a href="#"><i class="fab fa-instagram fa-lg"></i></a>
                        <a href="#"><i class="fab fa-youtube fa-lg"></i></a>
                        <a href="#"><i class="fab fa-tiktok fa-lg"></i></a>
                    </div>
                </div>
                <div class="col-lg-2 col-md-6">
                    <h5>Liên kết</h5>
                    <ul>
                        <li><a asp-controller="Home" asp-action="Index">Trang chủ</a></li>
                        <li><a asp-controller="DichVu" asp-action="Index">Dịch vụ</a></li>
                        <li><a asp-controller="SanPham" asp-action="Index">Sản phẩm</a></li>
                        <li><a asp-controller="LienHe" asp-action="Index">Liên hệ</a></li>
                    </ul>
                </div>
                <div class="col-lg-3 col-md-6">
                    <h5>Dịch vụ</h5>
                    <ul>
                        <li><a href="#">Bảo dưỡng định kỳ</a></li>
                        <li><a href="#">Sửa chữa động cơ</a></li>
                        <li><a href="#">Thay dầu máy</a></li>
                        <li><a href="#">Kiểm tra tổng quát</a></li>
                    </ul>
                </div>
                <div class="col-lg-3 col-md-6">
                    <h5>Liên hệ</h5>
                    <ul>
                        <li><i class="fas fa-map-marker-alt me-2"></i>Ngã 4 An Dương Vương, Trần Phú, Quảng Ngãi</li>
                        <li><i class="fas fa-phone me-2"></i><a href="tel:0384424567">038 442 4567</a></li>
                        <li><i class="fas fa-envelope me-2"></i><a href="mailto:contact@mtproauto.vn">contact@mtproauto.vn</a></li>
                    </ul>
                </div>
            </div>
            <hr style="border-color: rgba(255,255,255,0.1); margin: 2rem 0 0;">
            <div class="text-center" style="padding: 1.5rem 0; margin: 0;">
                <p class="mb-0" style="color: rgba(255, 255, 255, 0.8);">&copy; 2025 MTProAuto. Tất cả quyền được bảo lưu.</p>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        // Cập nhật số lượng giỏ hàng
        function updateCartCount() {
            $.get('@Url.Action("GetCartCount", "SanPham")', function(data) {
                $('#cartCount').text(data);
            });
        }

        // Gọi khi trang load
        $(document).ready(function() {
            updateCartCount();
            
            // Navbar scroll effect
            $(window).scroll(function() {
                if ($(this).scrollTop() > 50) {
                    $('.navbar').addClass('scrolled');
                } else {
                    $('.navbar').removeClass('scrolled');
                }
            });
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
