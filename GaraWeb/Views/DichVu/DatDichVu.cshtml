@model GaraWeb.Models.DichVu
@{
    ViewData["Title"] = "Đặt dịch vụ - " + Model.TenDichVu;
}

<style>
    .page-header {
        background: var(--gradient-primary);
        color: white;
        padding: 3rem 0 2rem;
        margin-bottom: 3rem;
    }

    .page-header h1 {
        font-size: 2.5rem;
        font-weight: 800;
        margin-bottom: 0.5rem;
    }

    .booking-card {
        background: white;
        border: 1px solid var(--gray-light);
        border-radius: var(--radius-xl);
        box-shadow: var(--shadow-md);
        padding: 2.5rem;
        margin-bottom: 2rem;
    }

    .booking-card h4 {
        font-weight: 800;
        color: var(--dark);
        margin-bottom: 2rem;
        padding-bottom: 1rem;
        border-bottom: 2px solid var(--light);
    }

    .service-info-card {
        background: white;
        border: 1px solid var(--gray-light);
        border-radius: var(--radius-xl);
        box-shadow: var(--shadow-md);
        overflow: hidden;
        margin-bottom: 1.5rem;
    }

    .service-info-card img {
        width: 100%;
        height: 200px;
        object-fit: cover;
    }

    .service-info-card .card-body {
        padding: 1.5rem;
    }

    .service-info-card h6 {
        font-weight: 700;
        color: var(--dark);
        margin-bottom: 0.75rem;
    }

    .service-info-card .text-muted {
        color: var(--gray) !important;
        font-size: 0.9rem;
        line-height: 1.6;
    }

    .price-badge {
        font-size: 1.5rem;
        font-weight: 800;
        color: var(--primary);
    }

    .contact-info-card {
        background: var(--light);
        border: 1px solid var(--gray-light);
        border-radius: var(--radius-xl);
        padding: 1.5rem;
    }

    .contact-info-card h6 {
        font-weight: 700;
        color: var(--dark);
        margin-bottom: 1rem;
    }

    .contact-info-card p {
        color: var(--gray);
        margin-bottom: 0.75rem;
        display: flex;
        align-items: center;
    }

    .contact-info-card i {
        color: var(--primary);
        width: 24px;
    }
</style>

<div class="page-header">
    <div class="container text-center">
        <h1>Đặt lịch hẹn dịch vụ</h1>
        <p>Vui lòng điền đầy đủ thông tin để chúng tôi có thể phục vụ bạn tốt nhất</p>
    </div>
</div>

<div class="container pb-5">
    <div class="row">
        <div class="col-lg-8">
            <div class="booking-card">
                <h4><i class="fas fa-calendar-check me-2"></i>Thông tin đặt lịch</h4>
                <form method="post">
                    <input type="hidden" name="id" value="@Model.Id" />
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="tenKhachHang" class="form-label">Họ và tên *</label>
                            <input type="text" class="form-control" id="tenKhachHang" name="tenKhachHang" placeholder="Nguyễn Văn A" required>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="soDienThoai" class="form-label">Số điện thoại *</label>
                            <input type="tel" class="form-control" id="soDienThoai" name="soDienThoai" placeholder="0123456789" required>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="diaChi" class="form-label">Địa chỉ *</label>
                        <textarea class="form-control" id="diaChi" name="diaChi" rows="3" placeholder="Nhập địa chỉ của bạn" required></textarea>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="ngayHen" class="form-label">Ngày đến gara *</label>
                            <input type="date" class="form-control" id="ngayHen" name="ngayHen" required>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="gioHen" class="form-label">Giờ hẹn *</label>
                            <input type="time" class="form-control" id="gioHen" name="gioHen" required>
                        </div>
                    </div>
                    <div class="mb-4">
                        <label for="ghiChu" class="form-label">Ghi chú</label>
                        <textarea class="form-control" id="ghiChu" name="ghiChu" rows="4" placeholder="Mô tả chi tiết về vấn đề của xe hoặc yêu cầu đặc biệt..."></textarea>
                    </div>
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a href="@Url.Action("Index", "DichVu")" class="btn btn-outline-primary me-md-2">
                            <i class="fas fa-arrow-left me-2"></i>Quay lại
                        </a>
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="fas fa-check me-2"></i>Xác nhận đặt lịch
                        </button>
                    </div>
                </form>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="service-info-card">
                <img src="@(string.IsNullOrEmpty(Model.HinhAnh) ? "https://images.pexels.com/photos/4489743/pexels-photo-4489743.jpeg" : Model.HinhAnh)" 
                     alt="@Model.TenDichVu">
                <div class="card-body">
                    <h6>@Model.TenDichVu</h6>
                    <p class="text-muted mb-3">@Model.MoTa</p>
                    <div class="d-flex justify-content-between align-items-center">
                        <span class="price-badge">@Model.Gia.ToString("N0") ₫</span>
                        @if (Model.TrangThai)
                        {
                            <span class="badge bg-success">
                                <i class="fas fa-check me-1"></i>Có sẵn
                            </span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">
                                <i class="fas fa-pause me-1"></i>Tạm ngưng
                            </span>
                        }
                    </div>
                </div>
            </div>
            
            <div class="contact-info-card">
                <h6><i class="fas fa-info-circle me-2"></i>Thông tin liên hệ</h6>
                <p><i class="fas fa-phone"></i>038 442 4567</p>
                <p><i class="fas fa-envelope"></i>contact@mtproauto.vn</p>
                <p class="mb-0"><i class="fas fa-map-marker-alt"></i>Ngã 4 An Dương Vương, Trần Phú, Quảng Ngãi</p>
            </div>
        </div>
    </div>
</div>
