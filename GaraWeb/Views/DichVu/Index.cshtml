@model List<GaraWeb.Models.DichVu>
@{
    ViewData["Title"] = "Dịch vụ";
}

<div class="container py-5">
    <div class="section-title">
        <h2>Dịch vụ của chúng tôi</h2>
        <p>Chúng tôi cung cấp đầy đủ các dịch vụ sửa chữa và bảo dưỡng ô tô</p>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success text-center" role="alert">@TempData["SuccessMessage"]</div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger text-center" role="alert">@TempData["ErrorMessage"]</div>
    }

    <div class="row">
        @foreach (var dichVu in Model)
        {
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card service-card h-100">
                    <img src="@(string.IsNullOrEmpty(dichVu.HinhAnh) ? "https://via.placeholder.com/400x250/667eea/ffffff?text=" + dichVu.TenDichVu : dichVu.HinhAnh)" 
                         class="card-img-top" alt="@dichVu.TenDichVu" style="height: 250px; object-fit: cover;">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@dichVu.TenDichVu</h5>
                        <p class="card-text">@dichVu.MoTa</p>
                        <div class="mt-auto">
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <span class="h4 text-primary mb-0">@dichVu.Gia.ToString("N0") VNĐ</span>
                                @if (dichVu.TrangThai)
                                {
                                    <span class="badge bg-success">Có sẵn</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Tạm ngưng</span>
                                }
                            </div>
                            @if (dichVu.TrangThai)
                            {
                                <a href="@Url.Action("DatDichVu", "DichVu", new { id = dichVu.Id })" class="btn btn-primary w-100">
                                    <i class="fas fa-calendar-plus me-2"></i>Đặt dịch vụ
                                </a>
                            }
                            else
                            {
                                <button class="btn btn-secondary w-100" disabled>
                                    <i class="fas fa-times me-2"></i>Tạm ngưng
                                </button>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    @if (!Model.Any())
    {
        <div class="text-center py-5">
            <i class="fas fa-tools fa-3x text-muted mb-3"></i>
            <h4 class="text-muted">Chưa có dịch vụ nào</h4>
            <p class="text-muted">Vui lòng quay lại sau.</p>
        </div>
    }
</div>
