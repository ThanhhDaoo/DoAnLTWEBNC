@model GaraMVC.Models.Xe

@{
    ViewData["Title"] = "Chi tiết xe";
}

<div class="container-fluid mt-4">
    <h2 class="mb-4"><i class="fas fa-car"></i> Chi tiết xe</h2>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">Thông tin xe</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">Mã xe:</dt>
                        <dd class="col-sm-9">@Model.MaXe</dd>

                        <dt class="col-sm-3">Biển số:</dt>
                        <dd class="col-sm-9"><span class="badge bg-primary fs-6">@Model.BienSo</span></dd>

                        <dt class="col-sm-3">Hãng xe:</dt>
                        <dd class="col-sm-9">@Model.HangXe</dd>

                        <dt class="col-sm-3">Đời xe:</dt>
                        <dd class="col-sm-9">@Model.DoiXe</dd>

                        <dt class="col-sm-3">Màu xe:</dt>
                        <dd class="col-sm-9">@(Model.MauXe ?? "Chưa cập nhật")</dd>

                        <dt class="col-sm-3">Khách hàng:</dt>
                        <dd class="col-sm-9">
                            @if (Model.KhachHang != null)
                            {
                                <a asp-controller="KhachHang" asp-action="Details" asp-route-id="@Model.KhachHang.MaKH" class="text-decoration-none">
                                    @Model.KhachHang.TenKH
                                </a>
                            }
                            else
                            {
                                <span class="text-muted">N/A</span>
                            }
                        </dd>
                    </dl>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0">Thao tác</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a asp-action="Edit" asp-route-id="@Model.MaXe" class="btn btn-warning">
                            <i class="fas fa-edit"></i> Sửa thông tin
                        </a>
                        <a asp-action="Delete" asp-route-id="@Model.MaXe" class="btn btn-danger">
                            <i class="fas fa-trash"></i> Xóa xe
                        </a>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Quay lại danh sách
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
