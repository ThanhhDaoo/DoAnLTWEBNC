@model IEnumerable<GaraMVC.Models.KhachHang>

@{
    ViewData["Title"] = "Danh sách khách hàng";
}

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-users"></i> Danh sách khách hàng</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Thêm khách hàng mới
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Mã KH</th>
                            <th>Tên khách hàng</th>
                            <th>Số điện thoại</th>
                            <th>Email</th>
                            <th>Địa chỉ</th>
                            <th>Ngày đăng ký</th>
                            <th>Số xe</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.MaKH</td>
                                    <td>@item.TenKH</td>
                                    <td>@item.SDT</td>
                                    <td>@(item.Email ?? "-")</td>
                                    <td>@(item.DiaChi ?? "-")</td>
                                    <td>@item.NgayDangKy.ToString("dd/MM/yyyy")</td>
                                    <td>
                                        <span class="badge bg-info">
                                            @(item.DanhSachXe?.Count ?? 0) xe
                                        </span>
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-action="Details" asp-route-id="@item.MaKH" class="btn btn-sm btn-primary">
                                                <i class="fas fa-eye me-1"></i>Xem
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@item.MaKH" class="btn btn-sm btn-primary">
                                                <i class="fas fa-edit me-1"></i>Sửa
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.MaKH" class="btn btn-sm btn-primary">
                                                <i class="fas fa-trash me-1"></i>Xóa
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="8" class="text-center text-muted">
                                    <i class="fas fa-inbox fa-2x mb-2"></i><br>
                                    Chưa có khách hàng nào
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>