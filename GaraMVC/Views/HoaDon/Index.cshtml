@model IEnumerable<dynamic>

@{
    ViewData["Title"] = "Danh sách hóa đơn";
}

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2><i class="fas fa-file-invoice-dollar"></i> Danh sách hóa đơn</h2>
        <a asp-action="Create" class="btn btn-primary btn-lg">
            <i class="fas fa-plus"></i> Tạo hóa đơn mới
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card">
        <div class="card-body">
            <table class="table table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Mã HĐ</th>
                        <th>Ngày lập</th>
                        <th>Khách hàng</th>
                        <th>Biển số xe</th>
                        <th>Nhân viên</th>
                        <th>Tổng tiền</th>
                        <th>Hình thức TT</th>
                        <th>Trạng thái</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var hd in Model)
                    {
                        <tr>
                            <td><strong>#@hd.maHD</strong></td>
                            <td>@Convert.ToDateTime(hd.ngayLap).ToString("dd/MM/yyyy HH:mm")</td>
                            <td>@hd.khachHang?.tenKH</td>
                            <td>@hd.xe?.bienSo</td>
                            <td>@hd.nhanVien?.tenNV</td>
                            <td class="text-end"><strong>@(((decimal)hd.tongTien).ToString("N0")) đ</strong></td>
                            <td>@hd.hinhThucTT</td>
                            <td>
                                @if (hd.trangThai == "Hoàn thành")
                                {
                                    <span class="badge bg-success">Hoàn thành</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning">Đang xử lý</span>
                                }
                            </td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-action="Details" asp-route-id="@hd.maHD"
                                       class="btn btn-sm btn-primary">
                                        <i class="fas fa-eye me-1"></i>Chi tiết
                                    </a>
                                    <a asp-action="Print" asp-route-id="@hd.maHD"
                                       class="btn btn-sm btn-primary" target="_blank">
                                        <i class="fas fa-print me-1"></i>In
                                    </a>
                                    @if (hd.trangThai != "Hoàn thành")
                                    {
                                        <a asp-action="Delete" asp-route-id="@hd.maHD"
                                           class="btn btn-sm btn-primary">
                                            <i class="fas fa-trash me-1"></i>Xóa
                                        </a>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>