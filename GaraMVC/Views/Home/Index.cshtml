@model GaraMVC.ViewModels.TongQuanViewModel

@{
    ViewData["Title"] = "Trang chủ";
}

<style>
    .stat-card {
        border-radius: 0.75rem;
        border: none;
        overflow: hidden;
        transition: all 0.3s ease;
        height: 100%;
        min-height: 140px;
    }

    .stat-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15) !important;
    }

    .stat-card .card-body {
        padding: 1.75rem;
        display: flex;
        align-items: center;
        justify-content: space-between;
        height: 100%;
    }

    .stat-content h6 {
        font-size: 0.85rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-bottom: 0.75rem;
        opacity: 0.9;
    }

    .stat-content h2 {
        font-size: 2.5rem;
        font-weight: 700;
        margin: 0;
        line-height: 1;
    }

    .stat-icon {
        font-size: 3.5rem;
        opacity: 0.3;
    }

    .revenue-card {
        height: 100%;
        min-height: 220px;
    }

    .revenue-card .card-header {
        padding: 1.25rem 1.5rem;
        border: none;
    }

    .revenue-card .card-header h5 {
        margin: 0;
        font-weight: 600;
        font-size: 1.1rem;
    }

    .revenue-card .card-body {
        padding: 2rem 1.5rem;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

    .revenue-amount {
        font-size: 2.5rem;
        font-weight: 700;
        margin-bottom: 0.5rem;
    }

    .revenue-label {
        font-size: 0.95rem;
        color: #6c757d;
        margin: 0;
    }
</style>

<!-- Statistics Cards -->
<div class="row g-4 mb-4">
    <div class="col-xl-3 col-md-6">
        <div class="card stat-card bg-primary text-white">
            <div class="card-body">
                <div class="stat-content">
                    <h6>Khách hàng</h6>
                    <h2>@Model.TongKhachHang</h2>
                </div>
                <div class="stat-icon">
                    <i class="fas fa-users"></i>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6">
        <div class="card stat-card bg-success text-white">
            <div class="card-body">
                <div class="stat-content">
                    <h6>Xe đang quản lý</h6>
                    <h2>@Model.TongXe</h2>
                </div>
                <div class="stat-icon">
                    <i class="fas fa-car"></i>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6">
        <div class="card stat-card bg-info text-white">
            <div class="card-body">
                <div class="stat-content">
                    <h6>Dịch vụ</h6>
                    <h2>@Model.TongDichVu</h2>
                </div>
                <div class="stat-icon">
                    <i class="fas fa-tools"></i>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6">
        <div class="card stat-card bg-warning text-white">
            <div class="card-body">
                <div class="stat-content">
                    <h6>Sản phẩm</h6>
                    <h2>@Model.TongSanPham</h2>
                </div>
                <div class="stat-icon">
                    <i class="fas fa-box"></i>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Revenue Cards -->
<div class="row g-4 mb-4">
    <div class="col-md-6">
        <div class="card revenue-card">
            <div class="card-header bg-primary text-white">
                <h5><i class="fas fa-calendar-day me-2"></i>Doanh thu hôm nay</h5>
            </div>
            <div class="card-body">
                <h1 class="revenue-amount text-primary">@(((decimal)Model.DoanhThuHomNay).ToString("N0")) ₫</h1>
                <p class="revenue-label">Số hóa đơn: @Model.SoHoaDonHomNay</p>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card revenue-card">
            <div class="card-header bg-success text-white">
                <h5><i class="fas fa-calendar-alt me-2"></i>Doanh thu tháng này</h5>
            </div>
            <div class="card-body">
                <h1 class="revenue-amount text-success">@(((decimal)Model.DoanhThuThangNay).ToString("N0")) ₫</h1>
                <p class="revenue-label">Số hóa đơn: @Model.SoHoaDonThangNay</p>
            </div>
        </div>
    </div>
</div>

    <!-- Alert for low stock -->
    @if (Model.SanPhamSapHet > 0)
    {
        <div class="alert alert-danger" role="alert">
            <i class="fas fa-exclamation-triangle"></i>
            <strong>Cảnh báo!</strong> Có <strong>@Model.SanPhamSapHet</strong> sản phẩm sắp hết hàng (tồn kho &lt; 10).
            <a asp-controller="SanPham" asp-action="Index" class="alert-link">Xem ngay</a>
        </div>
    }
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
}
