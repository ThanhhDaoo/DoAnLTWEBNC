@model List<GaraMVC.Models.YeucauDichVu>
@{
    ViewData["Title"] = "Quản lý yêu cầu dịch vụ";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-clipboard-list"></i> Yêu cầu dịch vụ</h2>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card">
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Mã</th>
                                <th>Tên khách hàng</th>
                                <th>Số điện thoại</th>
                                <th>Dịch vụ</th>
                                <th>Ngày hẹn</th>
                                <th>Giờ hẹn</th>
                                <th>Ngày yêu cầu</th>
                                <th>Trạng thái</th>
                                <th>Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>YC-@item.MaYeuCau</td>
                                    <td>@item.TenKhachHang</td>
                                    <td>@item.SoDienThoai</td>
                                    <td>@item.DichVu?.TenDichVu</td>
                                    <td>@(item.NgayHen.HasValue ? item.NgayHen.Value.ToString("dd/MM/yyyy") : "")</td>
                                    <td>@(string.IsNullOrEmpty(item.GioHen) ? "" : item.GioHen)</td>
                                    <td>@item.NgayYeuCau.ToString("dd/MM/yyyy HH:mm")</td>
                                    <td>
                                        @if (item.TrangThai == "Mới")
                                        {
                                            <span class="badge bg-primary">Mới</span>
                                        }
                                        else if (item.TrangThai == "Đang xử lý")
                                        {
                                            <span class="badge bg-warning">Đang xử lý</span>
                                        }
                                        else if (item.TrangThai == "Hoàn thành")
                                        {
                                            <span class="badge bg-success">Hoàn thành</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">@item.TrangThai</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a href="@Url.Action("Details", new { id = item.MaYeuCau })" 
                                               class="btn btn-sm btn-primary">
                                                <i class="fas fa-eye me-1"></i>Xem
                                            </a>
                                            
                                            @if (item.TrangThai == "Mới")
                                            {
                                                <form method="post" action="@Url.Action("UpdateStatus", new { id = item.MaYeuCau, trangThai = "Đang xử lý" })" 
                                                      style="display: inline;" onsubmit="return confirm('Xác nhận bắt đầu xử lý yêu cầu này?');">
                                                    <button type="submit" class="btn btn-sm btn-primary">
                                                        <i class="fas fa-play me-1"></i>Xử lý
                                                    </button>
                                                </form>
                                            }
                                            
                                            @if (item.TrangThai == "Đang xử lý")
                                            {
                                                <form method="post" action="@Url.Action("UpdateStatus", new { id = item.MaYeuCau, trangThai = "Hoàn thành" })" 
                                                      style="display: inline;" onsubmit="return confirm('Xác nhận hoàn thành yêu cầu này?');">
                                                    <button type="submit" class="btn btn-sm btn-primary">
                                                        <i class="fas fa-check me-1"></i>Hoàn thành
                                                    </button>
                                                </form>
                                            }
                                            
                                            <form method="post" action="@Url.Action("Delete", new { id = item.MaYeuCau })" 
                                                  style="display: inline;" onsubmit="return confirm('Bạn có chắc muốn xóa yêu cầu này?');">
                                                <button type="submit" class="btn btn-sm btn-primary">
                                                    <i class="fas fa-trash me-1"></i>Xóa
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                    <p class="text-muted">Chưa có yêu cầu nào</p>
                </div>
            }
        </div>
    </div>
</div>

