@model GaraMVC.ViewModels.ErrorViewModel

@{
    ViewData["Title"] = "Lỗi";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0"><i class="fas fa-exclamation-triangle"></i> Đã xảy ra lỗi</h4>
                </div>
                <div class="card-body text-center">
                    <div class="display-1 text-danger mb-3">
                        @(Model?.StatusCode ?? 500)
                    </div>
                    <h3 class="mb-3">Rất tiếc, đã có lỗi xảy ra!</h3>
                    <p class="text-muted mb-4">
                        @if (!string.IsNullOrEmpty(Model?.ErrorMessage))
                        {
                            @Model.ErrorMessage
                        }
                        else
                        {
                            <text>Vui lòng thử lại sau hoặc liên hệ quản trị viên.</text>
                        }
                    </p>

                    @if (Model?.ShowRequestId ?? false)
                    {
                        <p class="text-muted small">
                            <strong>Request ID:</strong> @Model.RequestId
                        </p>
                    }

                    <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
                        <i class="fas fa-home"></i> Về trang chủ
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>