<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MTProAuto Admin</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
</head>
<body class="body">
    <div class="layout-wrap">
        <!-- Sidebar Blue -->
        <aside class="section-menu-left">
            <div class="box-logo">
                <a href="/" class="logo-header">
                    <div class="logo-icon">
                        <i class="fas fa-car-side"></i>
                    </div>
                    <span class="logo-text">MTProAuto</span>
                </a>
                <div class="btn-close-menu d-lg-none" onclick="toggleSidebar()">
                    <i class="fas fa-times"></i>
                </div>
            </div>
            
            <div class="section-menu-left-wrap">
                <div class="center-menu">
                    <!-- Main Menu -->
                    <div class="center-item">
                        <div class="center-heading">Main Menu</div>
                        <ul class="menu-list">
                            <li class="menu-item @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Home" ? "active" : "")">
                                <a asp-controller="Home" asp-action="Index">
                                    <span class="icon"><i class="fas fa-home"></i></span>
                                    <span class="text">Dashboard</span>
                                </a>
                            </li>
                            <li class="menu-item @(ViewContext.RouteData.Values["Controller"]?.ToString() == "KhachHang" ? "active" : "")">
                                <a asp-controller="KhachHang" asp-action="Index">
                                    <span class="icon"><i class="fas fa-users"></i></span>
                                    <span class="text">Khách hàng</span>
                                </a>
                            </li>
                            <li class="menu-item @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Xe" ? "active" : "")">
                                <a asp-controller="Xe" asp-action="Index">
                                    <span class="icon"><i class="fas fa-car"></i></span>
                                    <span class="text">Quản lý xe</span>
                                </a>
                            </li>
                        </ul>
                    </div>
                    
                    <!-- Services -->
                    <div class="center-item">
                        <div class="center-heading">Dịch vụ</div>
                        <ul class="menu-list">
                            <li class="menu-item @(ViewContext.RouteData.Values["Controller"]?.ToString() == "DichVu" ? "active" : "")">
                                <a asp-controller="DichVu" asp-action="Index">
                                    <span class="icon"><i class="fas fa-tools"></i></span>
                                    <span class="text">Dịch vụ</span>
                                </a>
                            </li>
                            <li class="menu-item @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Yeucau" ? "active" : "")">
                                <a asp-controller="Yeucau" asp-action="Index">
                                    <span class="icon"><i class="fas fa-clipboard-list"></i></span>
                                    <span class="text">Yêu cầu dịch vụ</span>
                                </a>
                            </li>
                            <li class="menu-item @(ViewContext.RouteData.Values["Controller"]?.ToString() == "HoaDon" ? "active" : "")">
                                <a asp-controller="HoaDon" asp-action="Index">
                                    <span class="icon"><i class="fas fa-file-invoice-dollar"></i></span>
                                    <span class="text">Hóa đơn</span>
                                </a>
                            </li>
                        </ul>
                    </div>
                    
                    <!-- Inventory -->
                    <div class="center-item">
                        <div class="center-heading">Kho hàng</div>
                        <ul class="menu-list">
                            <li class="menu-item @(ViewContext.RouteData.Values["Controller"]?.ToString() == "SanPham" ? "active" : "")">
                                <a asp-controller="SanPham" asp-action="Index">
                                    <span class="icon"><i class="fas fa-box"></i></span>
                                    <span class="text">Sản phẩm</span>
                                </a>
                            </li>
                            <li class="menu-item @(ViewContext.RouteData.Values["Controller"]?.ToString() == "ThongKe" ? "active" : "")">
                                <a asp-controller="ThongKe" asp-action="Index">
                                    <span class="icon"><i class="fas fa-chart-bar"></i></span>
                                    <span class="text">Thống kê</span>
                                </a>
                            </li>
                        </ul>
                    </div>
                    
                    <!-- Settings -->
                    <div class="center-item">
                        <div class="center-heading">Cài đặt</div>
                        <ul class="menu-list">
                            <li class="menu-item @(ViewContext.RouteData.Values["Controller"]?.ToString() == "LienHe" ? "active" : "")">
                                <a asp-controller="LienHe" asp-action="Index">
                                    <span class="icon"><i class="fas fa-envelope"></i></span>
                                    <span class="text">Liên hệ</span>
                                </a>
                            </li>
                            <li class="menu-item">
                                <a href="#">
                                    <span class="icon"><i class="fas fa-cog"></i></span>
                                    <span class="text">Cài đặt</span>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </aside>

        <!-- Main Content -->
        <div class="section-content-right">
            <!-- Header -->
            <header class="header-dashboard">
                <div class="header-left">
                    <button class="btn-toggle-menu" onclick="toggleSidebar()">
                        <i class="fas fa-bars"></i>
                    </button>
                    <div class="form-search">
                        <i class="fas fa-search icon-search"></i>
                        <input type="text" placeholder="Tìm kiếm...">
                    </div>
                </div>
                
                <div class="header-right">
                    <button class="header-item" title="Thông báo">
                        <i class="fas fa-bell"></i>
                        <span class="badge-notify">3</span>
                    </button>
                    <button class="header-item" title="Tin nhắn">
                        <i class="fas fa-envelope"></i>
                    </button>
                    <button class="header-item" title="Cài đặt">
                        <i class="fas fa-cog"></i>
                    </button>
                    
                    <div class="header-user dropdown">
                        <div class="dropdown-toggle" data-bs-toggle="dropdown">
                            @{
                                var username = Context.Session.GetString("Username") ?? "Admin";
                                var email = Context.Session.GetString("Email") ?? "";
                            }
                            <img src="https://ui-avatars.com/api/?name=@username&background=2377FC&color=fff&size=40" alt="@username">
                            <div class="user-info">
                                <span class="user-name">@username</span>
                                <span class="user-role">Quản trị viên</span>
                            </div>
                        </div>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li><a class="dropdown-item" href="#"><i class="fas fa-user me-2"></i>Hồ sơ</a></li>
                            <li><a class="dropdown-item" href="#"><i class="fas fa-cog me-2"></i>Cài đặt</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item text-danger" asp-controller="Auth" asp-action="Logout"><i class="fas fa-sign-out-alt me-2"></i>Đăng xuất</a></li>
                        </ul>
                    </div>
                </div>
            </header>

            <!-- Page Content -->
            <main class="main-content">
                <div class="main-content-inner">
                    @RenderBody()
                </div>
            </main>
            
            <!-- Footer -->
            <footer class="footer-dashboard">
                Copyright © 2025 MTProAuto. Design with <i class="fas fa-heart text-danger"></i> by <a href="#">ThemesFlat</a>. All rights reserved.
            </footer>
        </div>
    </div>

    <!-- Overlay -->
    <div class="overlay" onclick="toggleSidebar()"></div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/admin.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>