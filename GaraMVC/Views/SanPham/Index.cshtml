@model IEnumerable<GaraMVC.Models.SanPham>

@{
    ViewData["Title"] = "Quản lý sản phẩm";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2><i class="fas fa-box"></i> Danh sách sản phẩm</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Thêm sản phẩm mới
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card">
        <div class="card-body">
            <table class="table table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Mã SP</th>
                        <th>Tên sản phẩm</th>
                        <th>Đơn giá</th>
                        <th>Tồn kho</th>
                        <th>Đơn vị</th>
                        <th>Mô tả</th>
                        <th style="width: 180px;">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="@(item.SoLuongTon < 10 ? "table-warning" : "")">
                            <td>@item.Id</td>
                            <td><strong>@item.TenSanPham</strong></td>
                            <td class="text-end">@item.Gia.ToString("N0") đ</td>
                            <td>
                                @if (item.SoLuongTon < 10)
                                {
                                    <span class="badge bg-danger">@item.SoLuongTon</span>
                                    <small class="text-danger">(Sắp hết)</small>
                                }
                                else
                                {
                                    <span class="badge bg-success">@item.SoLuongTon</span>
                                }
                            </td>
                            <td>@(item.DonVi ?? "—")</td>
                            <td>@(item.MoTa ?? "—")</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-action="Edit" asp-route-id="@item.Id"
                                       class="btn btn-sm btn-warning">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.Id"
                                       class="btn btn-sm btn-info">
                                        <i class="fas fa-info-circle"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id"
                                       class="btn btn-sm btn-danger">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>