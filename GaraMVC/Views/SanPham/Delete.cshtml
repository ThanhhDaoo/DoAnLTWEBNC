@model GaraMVC.Models.SanPham

@{
    ViewData["Title"] = "Xác nhận xóa sản phẩm";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0"><i class="fas fa-trash"></i> Xác nhận xóa sản phẩm</h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle"></i>
                        <strong>Cảnh báo!</strong> Bạn có chắc chắn muốn xóa sản phẩm này?
                    </div>

                    <dl class="row">
                        <dt class="col-sm-4">Mã sản phẩm:</dt>
                        <dd class="col-sm-8">#@Model.Id</dd>

                        <dt class="col-sm-4">Tên sản phẩm:</dt>
                        <dd class="col-sm-8"><strong>@Model.TenSanPham</strong></dd>

                        <dt class="col-sm-4">Đơn giá:</dt>
                        <dd class="col-sm-8">@Model.Gia.ToString("N0") đ</dd>

                        <dt class="col-sm-4">Số lượng tồn:</dt>
                        <dd class="col-sm-8">@Model.SoLuongTon @Model.DonVi</dd>
                    </dl>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Hủy
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash"></i> Xác nhận xóa
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>